<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/telas_background"
    tools:context="com.imcub.imcubApp.MainActivity">

    <View
        android:id="@+id/topoLogin"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/topomont"
        />


    <ImageView
        android:id="@+id/imgLogoLogin"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="@id/topoLogin"
        app:layout_constraintEnd_toEndOf="@id/topoLogin"
        app:layout_constraintStart_toStartOf="@id/topoLogin"
        app:layout_constraintTop_toTopOf="@id/topoLogin"
        android:layout_marginBottom="100dp"
        android:src="@mipmap/ic_logoapppng"



        />


    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:fontFamily="@font/aileron_bold"
    android:linksClickable="true"
    android:text="Email"
    android:textColor="#ffffff"
    android:visibility="visible"
    app:layout_constraintStart_toStartOf="@id/barEmailLogin"
    app:layout_constraintBottom_toTopOf="@id/barEmailLogin"
    />

    <EditText
        android:id="@+id/barEmailLogin"
        android:layout_width="300dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toTopOf="@+id/barSenhaLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topoLogin"
        android:layout_marginTop="50dp"
        android:background="@drawable/bartext"
        android:drawableStart="@drawable/ic_email_black_24dp"
        android:drawablePadding="8dp"
        android:hint="@string/email_imcub_com_br"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textColor="#8800ee"
        android:textColorHint="#9977ff"
        android:drawableTint="#8800ee"
        android:textSize="14sp"
        android:layout_marginBottom="8dp"
        tools:ignore="Autofill,LabelFor,UnusedAttribute" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aileron_bold"
        android:linksClickable="true"
        android:text="@string/senha"
        android:textColor="#ffffff"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="@id/barSenhaLogin"
        app:layout_constraintBottom_toTopOf="@id/barSenhaLogin"
         />

    <EditText
        android:id="@+id/barSenhaLogin"
        android:layout_width="300dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toTopOf="@+id/btnLogarLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barEmailLogin"
        android:layout_marginBottom="15dp"
        android:background="@drawable/bartext"
        android:drawableStart="@drawable/ic_lock_black_24dp"
        android:drawablePadding="8dp"
        android:drawableTint="#8800ee"
        android:fontFamily="@font/aileron_light"
        android:hint="@string/senha"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="#8800ee"
        android:textColorHint="#9977ff"
        android:textSize="14sp"
        tools:ignore="Autofill,LabelFor" />

    <TextView
        android:id="@+id/btnEsqueci"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/aileron_bold"
        android:linksClickable="true"
        android:text="@string/esqueci_a_senha"
        android:textColor="#ffffff"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@id/barSenhaLogin"
        app:layout_constraintTop_toBottomOf="@id/barSenhaLogin" />

    <Button
        android:id="@+id/btnLogarLogin"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:minHeight="48dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/botaoshape"
        android:fontFamily="@font/aileron_bold"
        android:text="@string/entrar"
        android:textColor="#ffffff"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/btnCadEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/barSenhaLogin" />





    <TextView
        android:id="@+id/btnCadEmail"
        android:layout_width="200dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/aileron_bold"
        android:text="@string/registre_se"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLogarLogin" />


</androidx.constraintlayout.widget.ConstraintLayout>